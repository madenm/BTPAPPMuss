{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[[...path]].js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/[[...path]].js": { "memory": 1024, "maxDuration": 60 }
  }
}
