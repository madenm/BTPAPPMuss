{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "framework": null,
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[[...path]].js" },
    { "src": "/(.*)", "dest": "/index.html", "status": 200 }
  ],
  "functions": {
    "api/[[...path]].js": { "memory": 1024, "maxDuration": 60 }
  }
}
